<html>
    <head>
        <title><%= title%></title>
        <script src="https://kit.fontawesome.com/da2a48d4f5.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/Homepage.css">
    </head>

    <body>
        <div id="main-container">
        <h1>
           TODO App
        </h1>

        <form action="/createtask" method="post">
        <!-- description-container -->
        <div id="description-container">
        <label for="description">DESCRIPTION</label>
        <input type="text" placeholder="What do you need to do?" name="description" id="description">
            </div>

            <!-- date and category -->
            <div id="category-date-container">

                <!-- category -->
                <div id="category">

                    <label for="dropdown">CATEGORY</label>
                    <!-- dropdown of choose a category -->
                    <select id="category-list" name="taskcategory">
                        <option value="" disabled selected>Choose a Category</option>
                        <option value="personal">PERSONAL</option>
                        <option value="school">SCHOOL</option>
                        <option value="work">WORK</option>
                        <option value="others">OTHERS</option>
                    </select>
                </div>
                    <!-- container for date -->
                <div id="date-container">
                    <label for="date">DUE DATE</label>
                    <input type="date" id="date" name="dateoftask">
                </div>
            </div>
                <!-- add task and delete button -->
            <div class="button">
                <button type="submit" class="btn btn-dark">
                    <i class="fa-solid fa-plus"></i> ADD TASK</button>

        </form>

        <!-- delete task button -->

        <!-- <form action="/delete" method="post">
            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-trash"></i> DELETE TASK</button>
            </form> -->
            </div>

            <!-- list of tasks -->
            <div>
                <ul>
                    <% for(let i of Task_List){%> 
                        <li>
                            <div id="displaytasks">
                               <div>
                                
                            <!-- <input type="checkbox" name="checkbox" value="<%= i.dateoftask%>" id="deletebox"> -->
                           
                            <a href="/delete/?id=<%= i._id%>" class="trash-can">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>

                            <%= i.description %>
                        </div>
                            <%= i.taskcategory %>
                       

                        </div>

                        <div id="displaydate">
                            <div>
                        <i class="fa-regular fa-calendar-days"></i>
                    </div>
                            <%= i.dateoftask %>
                            </div>
                        </li>

                        <%} %>
                </ul>
            </div>

        </div>
        
    </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script src="/Homepage.js"></script>
    </body>
</html>